<script type="text/javascript">
	$(".language_link").click(function() {
		var url = document.location.toString();
		if (url.indexOf('lang') != -1) {
			url = url.replace(/lang=../g, $(this).attr('href').substring(1)); 
		} else {
			if (url.indexOf('?') == -1) {
				url += '?' + $(this).attr('href').substring(1);
			} else {
				url += $(this).attr('href');
			}
		}
		console.error(url);
		window.location = url;
		return false;
	})
</script>